<!DOCTYPE html>
<html>
  <head>
    <title>GmCampaignApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/stylesheets/main.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <link rel="apple-touch-icon" sizes="180x180" href="/stylesheets/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/stylesheets/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/stylesheets/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
  </head>

  <body>

    <div class="navbar">
      <%= link_to("Log in with Google", '/auth/google_oauth2', method: :post) %>

      <div class="dropdown">
      <button class="dropbtn">Campaigns
        <i class="fa fa-caret-down"></i>
      </button>
        <div class="dropdown-content">
          <%= link_to("Campaign List", '/campaigns') %>
          <%= link_to("Create a Campaign", new_campaign_path) %>
        </div>
      </div>
      
      <div class="dropdown">
      <button class="dropbtn">Players
        <i class="fa fa-caret-down"></i>
      </button>
        <div class="dropdown-content">
          <%= link_to("Players List", '/users') %>
        </div>
      </div>

    <div class="dropdown">
      <button class="dropbtn">Characters
        <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content">
        <%= link_to("Character List", '/characters') %>
      </div>
    </div> 

      <% if !current_user %>
          <%= link_to("Sign Up", new_user_path) %>
          <%= link_to("Log in", login_path) %>
        <% end %>
        <% if current_user && logged_in? %>
          <%= link_to "#{current_user.first_name}'s profile", user_path(current_user)%>
          <%= link_to "Log Out", logout_path %>
        <% end %>
  </div>

    <%= image_tag "/images/dm.png", style: 'width:100px;height:100px;float:right;' %>
  <h1>Campaign APP</h1>
  <% if !current_user && !logged_in? %>
   <%= button_to("Log in with Google", '/auth/google_oauth2', method: :post) %><br />
  <% end %>
    <%= yield %>
  </body>
</html>


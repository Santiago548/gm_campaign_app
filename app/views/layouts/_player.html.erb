<div class="navbar">
  
      <div class="dropdown">
      <button class="dropbtn">Campaigns
        <i class="fa fa-caret-down"></i>
      </button>
        <div class="dropdown-content">
          <%= link_to("Campaign List", '/campaigns') %>
        </div>
      </div>
      
      <div class="dropdown">
      <button class="dropbtn">Players
        <i class="fa fa-caret-down"></i>
      </button>
        <div class="dropdown-content">
          <%= link_to("Game Masters List", '/users?game_master=true') %>
          <%= link_to("Players List", '/users?player=true') %>
        </div>
      </div>

    <div class="dropdown">
      <button class="dropbtn">Characters
        <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content">
        <%= link_to("Character List", '/characters') %>
        <% if logged_in? && current_user.game_master == false%>
          <%= link_to("Your Characters", user_characters_path(current_user.id)) %>
          <%= link_to("Create your Character", new_user_character_path(current_user.id)) %>
        <% end %>
      </div>
    </div> 
      <% if !current_user || !logged_in? %>
          <%= link_to("Sign Up", new_user_path) %>
          <%= link_to("Log in", login_path) %>
          <%= link_to("Log in with Google", '/auth/google_oauth2', method: :post) %>
        <% end %>
        <% if current_user && logged_in? %>
          <%= link_to "#{current_user.first_name}'s profile", user_path(current_user)%>
          <%= link_to "Log Out", logout_path %>
        <% end %>
    </div>
    <fieldset>
    <img src="/images/D20.png" alt="D20" style="width:100px;height:100px;float:left;padding:10px;">
    <% if logged_in? && current_user.game_master == false %>
      <h1>Player Campaign APP</h1>
    <%else %>
      <h1>Campaign APP</h1>
    <% end %>
  <% if !current_user && !logged_in? %>
   <%= button_to("Log in with Google", '/auth/google_oauth2', method: :post) %><br />
  <% end %>
  </fieldset><br>
<%= render partial: 'layouts/errors', locals: {object: @character} %>
<%= form_for @character do |f| %>
<fieldset>
  <%= display_user_field(f) %>
  <%= display_campaign_field(f) %>
  <hr><hr>
  <b>NAME: <%= f.text_field :name %><br />
  LEVEL: <%= f.select :level, (1..20) %><br />
  RACE: <%= f.select :race, (character_race) %><br />
  CLASS: <%= f.select :character_class, (character_classes) %><br />
  ARMOR CLASS: <%= f.select :armor_class, (10..22)  %><br />
  SPEED: <%= f.select :speed, ([5,10,15,20,25,30,35,40,45,50]) %> ft<br />
  <hr><hr>
  STRENGTH: +<%= f.select :strength, (1..6) %><br />
  DEXTERITY: +<%= f.select :dexterity, (1..6) %><br />
  CONSTITUTION: +<%= f.select :constitution, (1..6) %><br />
  INTELLIGENCE: +<%= f.select :intelligence, (1..6) %><br />
  WISDOM: +<%= f.select :wisdom, (1..6) %><br />
  CHARISMA: +<%= f.select :charisma, (1..6) %><br />
  <hr><hr>
  LANGUAGES: <%= f.select :language_1, (character_languages) %> 
             <%= f.select :language_2, (character_languages) %><br />
               
  WEAPON PROFICENCY:<%= f.select :weapon_1, (character_weapons) %>
                    <%= f.select :weapon_2, (character_weapons) %><br />
   
  ARMOR PROFICENCEY:<%= f.select :armor_1, (character_armors) %><br /> 
    
  SKILLS:<%= f.select :skill_1, (character_skills) %>
         <%= f.select :skill_2, (character_skills) %><br />
         <hr><hr></b>
  <%= f.submit %>
  </fieldset>
<% end %>
 
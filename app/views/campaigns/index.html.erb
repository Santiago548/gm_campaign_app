<hr>
<fieldset>
<h2>CAMPAIGNS:</h2>
<%= form_tag(campaigns_path, method: :get) do%>
    <%= text_field_tag(:search, params[:search])%>
    <%= submit_tag("Search") %>
<% end %>
</fieldset>
<hr>
<fieldset>
<% @campaigns.campaign_order_alphabet.each do |c| %>
   <br>
    <fieldset>
    <legend>
    <b>Campaign Name:</b> <%=link_to(c.name,  "campaigns/#{c.id}") %><br>
    </legend>
    <b>GM Name:</b> <%= c.gm_name.capitalize %><br>
    <b>Next Session:</b> <%if c.next_session %>
    <%= c.next_session.strftime( "%a, %B, %e") %><br>
    <% end %>
     
    <b>Session Active:</b> 
    <% if c.session_active == true%>
    <%= "the group is out questing" %>
    <% else %>
    <%= "The group is in the tavern awaiting thier next quest." %>
    <% end %>
    </fieldset>
<% end %>
</fieldset>

